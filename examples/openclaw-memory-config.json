{
  "$schema": "https://docs.openclaw.ai/schema/openclaw.json",
  "_comment": "Merge this memory block into your openclaw.json",
  "memory": {
    "backend": "qmd",
    "citations": "auto",
    "qmd": {
      "command": "/path/to/qmd",
      "includeDefaultMemory": true,
      "searchMode": "search",
      "update": {
        "interval": "5m",
        "debounceMs": 15000,
        "onBoot": true,
        "waitForBootSync": false
      },
      "limits": {
        "maxResults": 8,
        "timeoutMs": 5000
      },
      "sessions": {
        "enabled": true,
        "retentionDays": 30
      },
      "scope": {
        "default": "deny",
        "rules": [
          {
            "action": "allow",
            "match": {
              "chatType": "direct"
            }
          }
        ]
      }
    }
  }
}
